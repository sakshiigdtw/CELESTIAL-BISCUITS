    <script>
       
        alert("APKA HAMARI SHOP MEIN SWAGAT HAI") ;

        var vegetable = prompt("what vegetable do you want ??")
        switch(vegetable) {
            case 'potato' :
                alert('potato is 60/- per kilo.');
                break;

                case 'tomato' :
                alert('Tomato  is 100/- per kilo.')
                break;

                case 'corn' :
                alert('corn  is 90/- per kilo.')
                break;

                case 'broccoli' :
                alert('broccoli is 250/- per kilo.')
                break;

                case 'capsicum' :
                alert('Capsicum  is 40/- per kilo.')
                break;

               default :
               alert(`${vegetable} vegetable is out of stock right now...`);
        }

        var vege = prompt("do you want anything else ??");

        alert("THANKYOU FOR JOINING US") ;

        
